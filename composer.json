{
  "name": "memran/marwa-db",
  "description": "PHP PDO Mysql Database Library",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "keywords": [
    "php",
    "mysql",
    "pdo"
  ],
  "license": "MIT",
  "require": {
    "php": ">= 7.2.0",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "MarwaDB\\": "src/"
    }
  },
  "require-dev": {
    "symfony/var-dumper": "4.4.x-dev",
    "squizlabs/php_codesniffer": "^3.3",
    "phpstan/phpstan": "^0.10.3",
    "phpunit/phpunit": "8"
  },
  "scripts": {
    "analyze": "vendor/bin/phpstan analyse -l 4 --no-progress src"
  }
}
