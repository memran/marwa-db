{
  "name": "memran/marwa-db",
  "description": "Lightweight, framework-agnostic PHP database toolkit: connections, query builder, ORM, schema, migrations, seeders, debug panel.",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "fakerphp/faker": "^1.23",
    "memran/marwa-debugbar": "^2.0",
    "memran/marwa-error-handler": "^1.0",
    "memran/marwa-logger": "^2.0",
    "symfony/console": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "Marwa\\DB\\": "src/"
    },
    "files": [
      "src/Support/Helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Marwa\\DB\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/marwa-db"
  ],
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist",
    "lint": "php -l $(git ls-files '*.php')"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
