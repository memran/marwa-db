{
  "name": "memran/marwa-db",
  "description": "Framework-agnostic, PSR-centric DB library with query builder, ORM, schema and migrations. Ships a CLI using symfony/console.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": { 
      "Marwa\\DB\\": "src/" 
    }
  },
  "autoload-dev": {
    "psr-4": { 
      "Marwa\\DB\\Tests\\": "tests/" 
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*",
    "psr/container": "^2.0",
    "psr/log": "^3.0",
    "psr/simple-cache": "^3.0",
    "symfony/console": "^7.0",
    "fakerphp/faker": "^1.23",
    "memran/marwa-logger": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
